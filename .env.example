# Root-MAS Environment Configuration
# Скопируйте этот файл в .env и заполните значения

# === ОБЯЗАТЕЛЬНЫЕ ПЕРЕМЕННЫЕ ===

# OpenRouter API для LLM моделей (https://openrouter.ai/)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# === ОПЦИОНАЛЬНЫЕ ПЕРЕМЕННЫЕ ===

# Yandex Cloud для SpeechKit (STT/TTS)
YANDEX_API_KEY=your_yandex_api_key_here
YANDEX_FOLDER_ID=your_yandex_folder_id_here

# Telegram Bot Token (получить у @BotFather)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# n8n интеграция
N8N_URL=http://localhost:5678
N8N_API_TOKEN=your_n8n_api_token_here

# GPT-Pilot интеграция
GPT_PILOT_URL=http://localhost:8000
GPT_PILOT_API_KEY=your_gpt_pilot_key_here

# AutoGen Studio
AUTOGEN_STUDIO_URL=http://localhost:8081
AUTOGEN_STUDIO_API_KEY=your_autogen_studio_key_here

# База данных PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=mas_db
POSTGRES_USER=mas_user
POSTGRES_PASSWORD=mas_password

# Redis кэш
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ChromaDB векторное хранилище
CHROMADB_HOST=localhost
CHROMADB_PORT=8001

# API сервер
API_HOST=0.0.0.0
API_PORT=8080

# Prometheus метрики
PROMETHEUS_METRICS_PORT=9000

# Vault для секретов (опционально)
VAULT_URL=http://localhost:8200
VAULT_TOKEN=your_vault_token_here

# Бюджет (USD в день)
DAILY_BUDGET_LIMIT=100.0

# Логирование
LOG_LEVEL=INFO
LOG_FILE=logs/mas.log

# Режим работы (development/production)
ENVIRONMENT=development
