# Root-MAS Environment Configuration
# Copy this file to .env and fill in your actual values

# =================================
# API Keys for Language Models
# =================================

# OpenRouter API Key (for GPT and other models)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Yandex Cloud API Keys (for Yandex GPT)
YANDEX_API_KEY=your_yandex_api_key_here
YANDEX_FOLDER_ID=your_yandex_folder_id_here

# =================================
# Database Configuration
# =================================

# PostgreSQL settings
CLIENT_POSTGRES_HOST=postgres
CLIENT_POSTGRES_DB=masdb
CLIENT_POSTGRES_USER=mas
CLIENT_POSTGRES_PASSWORD=mas_secure_password_change_me

# Redis settings
CLIENT_REDIS_HOST=redis
CLIENT_REDIS_PORT=6379
CLIENT_REDIS_PASSWORD=

# =================================
# External Services
# =================================

# n8n API Token (for workflow automation)
N8N_API_TOKEN=your_n8n_api_token_here

# Telegram Bot Token (if using Telegram integration)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# ChromaDB settings
CHROMA_HOST=localhost
CHROMA_PORT=8000
CHROMA_COLLECTION_NAME=root_mas_memory

# =================================
# Monitoring & Observability
# =================================

# Prometheus metrics port
PROMETHEUS_PORT=9000

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# =================================
# Application Settings
# =================================

# Application environment
ENVIRONMENT=production

# Max token budget per session
MAX_TOKEN_BUDGET=10000

# Default LLM tier (cheap, standard, premium)
DEFAULT_LLM_TIER=cheap

# =================================
# Security Settings
# =================================

# Secret key for session management
SECRET_KEY=your_very_secure_secret_key_change_this

# CORS settings (comma-separated domains)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# =================================
# Docker Compose Overrides
# =================================

# These can be used to override default Docker settings
# POSTGRES_PORT=5433
# REDIS_PORT=6380
# APP_PORT=8000

# =================================
# Optional: Backup Configuration
# =================================

# S3-compatible storage for backups
# BACKUP_S3_ENDPOINT=
# BACKUP_S3_ACCESS_KEY=
# BACKUP_S3_SECRET_KEY=
# BACKUP_S3_BUCKET=
