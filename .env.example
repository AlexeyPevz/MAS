# ==============================================
# Root-MAS System Environment Configuration
# ==============================================
# Скопируйте этот файл в .env и заполните значения

# === ОБЯЗАТЕЛЬНЫЕ ПЕРЕМЕННЫЕ ===

# OpenRouter API для LLM моделей
OPENROUTER_API_KEY=your_openrouter_api_key_here

# === ОПЦИОНАЛЬНЫЕ ПЕРЕМЕННЫЕ ===

# Telegram Bot (опционально)
# Получить токен: https://t.me/BotFather
TELEGRAM_BOT_TOKEN=

# Yandex SpeechKit (опционально, для голосовых функций)
# Получить в консоли Yandex Cloud
YANDEX_API_KEY=
YANDEX_FOLDER_ID=

# === НАСТРОЙКИ СИСТЕМЫ ===

# Окружение: production, development, testing
ENVIRONMENT=development

# Уровень логирования: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Режим запуска: full (всё), api (только API), mas (только MAS)
RUN_MODE=full

# === БАЗА ДАННЫХ (для Docker Compose) ===

# PostgreSQL
CLIENT_POSTGRES_USER=postgres
CLIENT_POSTGRES_PASSWORD=your_secure_password
CLIENT_POSTGRES_DB=rootmas

# Redis
CLIENT_REDIS_PORT=6380

# ChromaDB
CLIENT_CHROMA_PORT=8001

# n8n
CLIENT_N8N_USER=admin
CLIENT_N8N_PASSWORD=your_secure_password
CLIENT_N8N_PORT=5679

# === ДОПОЛНИТЕЛЬНЫЕ НАСТРОЙКИ ===

# Таймзона (IANA формат)
# Примеры: Europe/Moscow, America/New_York, Asia/Tokyo
TZ=Europe/Moscow

# Максимальный размер логов в МБ
MAX_LOG_SIZE=50

# Количество резервных копий логов
LOG_BACKUP_COUNT=5

# Дневной бюджет API в долларах
DAILY_API_BUDGET=10.0

# === БЕЗОПАСНОСТЬ ===

# Секретный ключ для JWT (генерировать: openssl rand -hex 32)
JWT_SECRET_KEY=

# Разрешенные CORS origins (через запятую)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# === ИНТЕГРАЦИИ ===

# GitHub (для работы с репозиториями)
GITHUB_TOKEN=

# Slack (для уведомлений)
SLACK_WEBHOOK_URL=

# === МЕТРИКИ И МОНИТОРИНГ ===

# Prometheus
PROMETHEUS_PORT=9090

# Grafana
GRAFANA_PORT=3000
