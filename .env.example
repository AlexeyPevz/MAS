# Root-MAS Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED SETTINGS
# =============================================================================

# OpenRouter API key for LLM models
# Get your key at: https://openrouter.ai/keys
OPENROUTER_API_KEY=your-openrouter-api-key-here

# =============================================================================
# OPTIONAL SETTINGS
# =============================================================================

# Environment mode
ENVIRONMENT=production  # Options: production, development

# Run mode
RUN_MODE=full  # Options: full (API + Bot), api (API only), mas (MAS only)

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Telegram Bot (optional)
# Create bot via @BotFather on Telegram
TELEGRAM_BOT_TOKEN=
TELEGRAM_STREAMING=true

# Yandex SpeechKit for voice features (optional)
YANDEX_API_KEY=
YANDEX_FOLDER_ID=

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=rootmas
POSTGRES_PASSWORD=rootmas_secure_password
POSTGRES_DB=rootmas

# Security Settings
MAS_SECRET_KEY=  # Leave empty to auto-generate
ADMIN_SECRET=  # Required for admin operations

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Monitoring
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090

# Logging
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE_MAX_MB=100
LOG_BACKUP_COUNT=5

# =============================================================================
# ADVANCED SETTINGS
# =============================================================================

# ChromaDB for vector search
CHROMA_HOST=localhost
CHROMA_PORT=8001

# Federation (experimental)
FEDERATION_ENABLED=false
FEDERATION_NODE_ID=

# N8N Workflow Integration
N8N_ENABLED=false
N8N_URL=http://localhost:5678
N8N_USER=admin
N8N_PASSWORD=admin

# AutoGen Studio Integration
AUTOGEN_STUDIO_URL=

# OpenAI API (if using directly instead of OpenRouter)
OPENAI_API_KEY=

# Other LLM Providers
ANTHROPIC_API_KEY=
COHERE_API_KEY=
HUGGINGFACE_API_KEY=
