# MAS System Environment Variables
# Скопируйте этот файл в .env и заполните значения

# === LLM API Keys ===
# OpenRouter (обязательный)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# OpenAI (опциональный)
OPENAI_API_KEY=your_openai_api_key_here

# Yandex GPT (опциональный)
YANDEX_GPT_API_KEY=your_yandex_api_key_here
YANDEX_FOLDER_ID=your_yandex_folder_id_here

# Anthropic (опциональный)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# === External Services ===
# Telegram Bot
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# n8n Integration
N8N_API_TOKEN=your_n8n_api_token_here
N8N_BASE_URL=http://localhost:5678

# === Databases ===
# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=masdb
POSTGRES_USER=mas
POSTGRES_PASSWORD=mas

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ChromaDB
CHROMA_HOST=localhost
CHROMA_PORT=8000

# === Monitoring ===
# Prometheus
PROMETHEUS_PORT=9000

# === Security ===
# HashiCorp Vault
VAULT_URL=http://localhost:8200
VAULT_TOKEN=your_vault_token_here

# === Application Settings ===
# Environment
ENVIRONMENT=development
DEBUG=true

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/mas_system.log

# === Docker Settings ===
# Client instance settings
CLIENT_POSTGRES_USER=client_mas
CLIENT_POSTGRES_PASSWORD=client_password
CLIENT_POSTGRES_DB=client_masdb
CLIENT_REDIS_PORT=6380
CLIENT_CHROMA_PORT=8001
CLIENT_N8N_PORT=5679
CLIENT_N8N_USER=admin
CLIENT_N8N_PASSWORD=admin123
