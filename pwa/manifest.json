    }
  ],

  "protocol_handlers": [
    {
      "protocol": "web+rootmas",
      "url": "/?action=%s"
    }
  ],

  "file_handlers": [
    {
      "action": "/handle-audio",
      "accept": {
        "audio/ogg": [".ogg"],
        "audio/mp3": [".mp3"],
        "audio/wav": [".wav"]
      }
    }
  ],

  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "audio",
          "accept": ["audio/*"]
        }
      ]
    }
  }
}