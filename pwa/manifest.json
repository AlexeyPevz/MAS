  "categories": ["productivity", "business", "developer"],
  
  "screenshots": [
    {
      "src": "screenshots/chat-screen.png",
      "sizes": "1280x720", 
      "type": "image/png",
      "platform": "wide",
      "label": "Чат интерфейс Root-MAS"
    },
    {
      "src": "screenshots/dashboard-screen.png",
