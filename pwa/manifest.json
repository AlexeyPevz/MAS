      "url": "/?tab=chat",
      "icons": [{ "src": "icons/chat-icon.png", "sizes": "96x96" }]
    },
    {
      "name": "Dashboard", 
      "short_name": "Метрики",
      "description": "Просмотр системных метрик",
      "url": "/?tab=dashboard",
      "icons": [{ "src": "icons/dashboard-icon.png", "sizes": "96x96" }]
